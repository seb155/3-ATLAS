{
  "$schema": "atlas-config-schema",
  "version": "2.1",
  "project": {
    "id": "{{PROJECT_ID}}",
    "name": "{{PROJECT_NAME}}",
    "type": "child"
  },
  "framework": {
    "source": "symlink",
    "path": "~/atlas-framework/.claude",
    "version": "2.1.0"
  },
  "layering": {
    "mode": "merge",
    "priority": ["framework", "parent", "overrides", "local"]
  },
  "inherit_from": {
    "parent": "{{PARENT_PATH}}/.atlas",
    "resources": ["credentials", "infrastructure"]
  },
  "overrides": {
    "agents": {},
    "commands": {},
    "settings": {}
  }
}
