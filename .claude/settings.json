{
  "$schema": "https://claude.ai/code/settings-schema.json",
  "version": "1.0",
  "project": {
    "name": "AXIOM",
    "type": "monorepo"
  },
  "atlas": {
    "version": "2.0",
    "parallel_agents": {
      "enabled": true,
      "max_concurrent": 5,
      "default_model": "sonnet"
    },
    "worktrees": {
      "enabled": true,
      "base_path": "/AXIOM-worktrees"
    },
    "sandbox": {
      "enabled": true,
      "pool_size": 3
    }
  },
  "token_optimization": {
    "compact_threshold_percent": 50,
    "exclude_patterns": [
      ".atlas/runtime/**",
      "node_modules/**",
      "__pycache__/**",
      "*.log"
    ],
    "builder_limits": {
      "backend-builder": {
        "model": "sonnet",
        "max_output_tokens": 16000
      },
      "frontend-builder": {
        "model": "sonnet",
        "max_output_tokens": 16000
      },
      "qa-tester": {
        "model": "haiku",
        "max_output_tokens": 8000
      }
    }
  },
  "context": {
    "auto_load": [
      "CLAUDE.md",
      ".atlas/config.yml"
    ],
    "exclude": [
      ".atlas/runtime/",
      "forge/sandbox/__pycache__/"
    ]
  }
}
