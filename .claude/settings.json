{
  "$schema": "https://claude.ai/code/settings-schema.json",
  "version": "2.0",
  "project": {
    "name": "AXIOM",
    "type": "monorepo"
  },
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "16000",
    "MAX_THINKING_TOKENS": "4096",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "MAX_MCP_OUTPUT_TOKENS": "10000"
  },
  "outputStyle": "default",
  "permissions": {
    "defaultMode": "normal"
  },
  "atlas": {
    "version": "2.0",
    "parallel_agents": {
      "enabled": true,
      "max_concurrent": 5,
      "default_model": "sonnet"
    },
    "worktrees": {
      "enabled": true,
      "base_path": "/AXIOM-worktrees"
    },
    "sandbox": {
      "enabled": true,
      "pool_size": 3
    }
  },
  "token_optimization": {
    "compact_threshold_percent": 50,
    "auto_compact": false,
    "exclude_patterns": [
      ".atlas/runtime/**",
      ".atlas/sessions/archive/**",
      "node_modules/**",
      "__pycache__/**",
      "*.log",
      "dist/**",
      "build/**",
      ".git/**"
    ],
    "builder_limits": {
      "backend-builder": {
        "model": "sonnet",
        "max_output_tokens": 8000
      },
      "frontend-builder": {
        "model": "sonnet",
        "max_output_tokens": 8000
      },
      "qa-tester": {
        "model": "haiku",
        "max_output_tokens": 4000
      }
    }
  },
  "context": {
    "auto_load": [
      "CLAUDE.md",
      ".atlas/config.yml"
    ],
    "on_demand": [
      ".claude/docs/platform.md",
      ".claude/docs/commands.md",
      ".claude/docs/infra.md",
      ".claude/docs/agents.md"
    ],
    "exclude": [
      ".atlas/runtime/",
      ".atlas/sessions/archive/",
      "forge/sandbox/__pycache__/"
    ]
  },
  "mcp": {
    "max_active_servers": 2,
    "warn_token_threshold": 30000
  }
}
