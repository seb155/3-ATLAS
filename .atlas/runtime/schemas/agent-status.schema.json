{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ATLAS Agent Status",
  "description": "Schema for tracking individual agent status",
  "type": "object",
  "required": ["agent", "status", "updated_at"],
  "properties": {
    "agent": {
      "type": "string",
      "description": "Agent name"
    },
    "status": {
      "type": "string",
      "enum": ["idle", "assigned", "working", "completed", "failed", "offline"]
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "current_task": {
      "type": "string",
      "description": "Current task ID if working"
    },
    "sandbox": {
      "type": "object",
      "properties": {
        "container_id": { "type": "string" },
        "worktree_path": { "type": "string" }
      }
    },
    "session": {
      "type": "object",
      "properties": {
        "started_at": { "type": "string", "format": "date-time" },
        "tasks_completed": { "type": "integer" },
        "tasks_failed": { "type": "integer" }
      }
    },
    "last_error": {
      "type": "object",
      "properties": {
        "message": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  }
}
