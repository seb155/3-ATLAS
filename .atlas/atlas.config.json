{
  "$schema": "atlas-config-schema",
  "version": "2.1",
  "project": {
    "id": "atlas",
    "name": "ATLAS Framework",
    "type": "standalone"
  },
  "framework": {
    "source": "local",
    "path": "./.claude",
    "version": "2.3.0"
  },
  "layering": {
    "mode": "merge",
    "priority": ["framework", "overrides", "local"]
  },
  "shared_resources": {
    "credentials": ".dev/context/credentials.md",
    "infrastructure": ".dev/infra/registry.yml"
  },
  "overrides": {
    "agents": {},
    "commands": {},
    "settings": {}
  }
}
