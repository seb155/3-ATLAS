{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ATLAS Task",
  "description": "Schema for inter-agent task communication",
  "type": "object",
  "required": ["id", "agent", "action", "status", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique task identifier",
      "pattern": "^task-[a-zA-Z0-9-]+$"
    },
    "agent": {
      "type": "string",
      "description": "Target agent name",
      "enum": ["backend-builder", "frontend-builder", "qa-tester", "devops-manager", "brainstorm"]
    },
    "action": {
      "type": "string",
      "description": "Action to perform",
      "examples": ["create_endpoint", "create_component", "run_tests", "diagnose"]
    },
    "status": {
      "type": "string",
      "enum": ["pending", "assigned", "in_progress", "completed", "failed", "cancelled"]
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 5
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "assigned_at": {
      "type": "string",
      "format": "date-time"
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    },
    "input": {
      "type": "object",
      "description": "Task-specific input parameters",
      "properties": {
        "app": {
          "type": "string",
          "description": "Target application"
        },
        "description": {
          "type": "string",
          "description": "Human-readable task description"
        },
        "files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Related files"
        },
        "context": {
          "type": "object",
          "description": "Additional context"
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs of tasks that must complete first"
    },
    "timeout_seconds": {
      "type": "integer",
      "default": 600,
      "description": "Maximum execution time"
    },
    "retry_count": {
      "type": "integer",
      "default": 0
    },
    "max_retries": {
      "type": "integer",
      "default": 2
    }
  }
}
